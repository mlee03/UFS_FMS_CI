FROM mklee03/external_libs:ufs-v1.0.0

#: WORKDIR /ufs_libraries

COPY . NCEPLIBS_tmp/
RUN cd NCEPLIBS_tmp    \
    && mkdir -p build && cd build \
    && cmake .. -DEXTERNAL_LIBS_DIR=/ufs_libraries/NCEPLIBS_external_libs -DCMAKE_INSTALL_PREFIX=/ufs_libraries/NCEPLIBS \
    && make \
    && make install \
    && cd /ufs_libraries && rm -rf NCEPLIBS_tmp



