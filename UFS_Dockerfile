FROM mklee03/nceplibs:CHANGEME

#: WORKDIR /ufs_libraries

COPY . UFS/
RUN cd UFS \
    && chmod +x /ufs_libraries/NCEPLIBS/bin/setenv_nceplibs.sh \
    && source /ufs_libraries/NCEPLIBS/bin/setenv_nceplibs.sh \
    && export COMPILER=gnu \
    && export CMAKE_Platform=linux.gnu \
    && export CMAKE_VERBOSE_MAKEFILE=ON \
    && ./build.sh


